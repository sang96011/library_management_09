<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".book"), books_path %></li>
        <li><%= link_to t(".user"), users_path %></li>
        <li><%= link_to t(".author"), authors_path %></li>
        <li><%= link_to t(".publisher"), publishers_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".logout"), logout_path, method: :delete %></li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
