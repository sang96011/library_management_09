<header class="navbar navbar-fixed-top navbar-inverse">
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to t(".title"), root_path, id: "logo" %>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li><%= link_to t(".book"), books_path %></li>
        <li><%= link_to t(".user"), users_path %></li>
        <li><%= link_to t(".author"), authors_path %></li>
        <li><%= link_to t(".publisher"), publishers_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to  "#{current_request.request_details.size}", cart_path, class: "glyphicon glyphicon-shopping-cart" %><li>
        <li><%= link_to t(".request"), requests_path %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <span class="glyphicon glyphicon-user"></span>
              <%= current_user.name %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to t(".profile"), edit_user_registration_path %></li>
              <li><%= link_to t(".logout"), destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to new_user_session_path do %>
            <%= t(".login") %><span class="glyphicon glyphicon-log-in"></span>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path do %>
            <%= t(".signup") %><span class="glyphicon glyphicon-user"></span>
            <% end %>
          </li>
        <% end %>
      </ul>
      </div>
    </div>
  </nav>
</header>
