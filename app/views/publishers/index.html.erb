<%= provide :title, t(".all") %>
<h1><%= t(".all") %></h1>
<div class="form-group">
  <%= search_form_for @q do |f| %>
    <%= f.label :name %>
    <%= f.search_field :name_cont %>
    <%= f.submit t(".search"), name: nil %>
  <% end %>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= sort_link(@q, :name) %></th>
      <th><%= sort_link(@q, :address) %></th>
      <th><%= t ".action" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @publishers %>
  </tbody>
</table>
<%= will_paginate %>

<br>
<%= t(".download") %>
<%= link_to t(".excel"), publishers_path(format: "xls") %><br>
